{
	"name": "haxball.js",
	"version": "4.0.1",
	"author": "mertushka",
	"description": "A powerful library for interacting with the Haxball Headless API",
	"keywords": [
		"haxball",
		"headless",
		"bot",
		"room"
	],
	"homepage": "https://github.com/mertushka/haxball.js#readme",
	"bugs": {
		"url": "https://github.com/mertushka/haxball.js/issues"
	},
	"license": "MIT",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mertushka/haxball.js.git"
	},
	"scripts": {
		"build": "bunup --format esm,cjs --minify --silent",
		"dev": "bunup --watch",
		"prepare": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.4",
		"@types/pako": "^2.0.4",
		"@types/ws": "^8.18.1",
		"bumpp": "^10.3.2",
		"bunup": "^0.16.10",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"dependencies": {
		"@peculiar/webcrypto": "^1.5.0",
		"@types/haxball-headless-browser": "^0.5.0",
		"https-proxy-agent": "^7.0.6",
		"json5": "^2.2.3",
		"node-datachannel": "^0.31.0",
		"pako": "^2.1.0",
		"ws": "^8.18.3",
		"xhr2": "^0.2.1"
	},
	"trustedDependencies": [
		"node-datachannel",
		"simple-git-hooks"
	]
}
